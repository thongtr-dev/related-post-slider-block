{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "create-block/related-posts-slider-block",
	"version": "1.0.0",
	"title": "Related Posts Slider Block",
	"category": "widgets",
	"icon": "list-view",
	"description": "Display related posts as a slider.",
	"supports": {
		"html": false
	},
	"attributes": {
		"totalPostsToShow": {
			"type": "number",
			"default": 9
		},
		"postsPerSlide": {
			"type": "number",
			"default": 3
		},
		"order": {
			"type": "string",
			"default": "DESC"
		},
		"orderBy": {
			"type": "string",
			"default": "date"
		}
	},
	"textdomain": "related-posts-slider-block",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
